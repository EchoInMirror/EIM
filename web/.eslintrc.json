{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "standard",
      "standard-jsx",
      "standard-react",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": ["error"]
  }
}
